<h1>Decide</h1>
<h1><%= @user[:name] %>, decide on <%= @choice[:choice] %></h1>


<%= form_for @decision do |f| %>
    <% if @decision.errors.any? %>
        <ul>
            <% @decision.errors.full_messages.each do |m| %>
                <li><%= m %></li>
            <% end %>
        </ul>
    <% end %>

    <%= f.label :decision %>
    <%= f.text_field :decision %><br>
    <%= hidden_field_tag :user_id, @user[:id] %>
    <%= hidden_field_tag :choice_id, @choice[:id] %>
    <%= f.submit %>
<% end %>