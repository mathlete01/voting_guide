<h1>Categories</h1>

<ul>
    <% @categories.each do |cat| %>
        <li><%= cat.title %></li>
        <ul>
            <% cat.choices.each do |ch| %>
            <li><%= ch.choice %>: <%= ch.summary %></li>
            <ul>
                <% ch.decisions.each do |dec| %>
                <li><%= dec.user.name %>: <%= dec.decision %></li>
                <% end %>
            </ul>
            <% end %>
        </ul>
    <% end %>
</ul>
